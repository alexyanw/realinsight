<div class="sidebar-tabs">
	<ul role="tablist">
		<li><a href="#info" role="tab"><i class="fa fa-question"></i></a></li>
		<li><a href="#config" role="tab"><i class="fa fa-gear"></i></a></li>
	</ul>
